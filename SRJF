    int i,j,smallest,count=0,time,n,end1;
    double avg=0,tt=0;
void processes()
{

    cout<<"\nEnter the number of Processes: ";  //input processes
    cin>>n;
   
    for(i=0; i<n; i++)
    {
        cout<<"\nEnter arrival time of process: ";  //input arrival time
        cin>>a[i];
   
        cout<<"\nEnter burst time of process: ";  //input biurst time
        cin>>b[i];
    }
    for(i=0; i<n; i++)
    {
	
        rem[i]=b[i];
        m[i]=b[i];
	}
}
